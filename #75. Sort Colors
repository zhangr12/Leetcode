class Solution {
public:
    void sortColors(vector<int>& nums) {
        vector<int> count(3, 0);
        for(int num:nums) count[num]++;
        int crtIdx = 0, crtColor = 0;
        while(crtIdx < nums.size()){
            while(count[crtColor] == 0) crtColor++;
            nums[crtIdx] = crtColor;
            crtIdx++;
            count[crtColor]--;
        }
    }
};
