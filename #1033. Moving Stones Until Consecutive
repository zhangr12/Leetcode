class Solution {
public:
    vector<int> numMovesStones(int a, int b, int c) {
        vector<int> v{a, b, c};
        sort(v.begin(), v.end());
        if(v[1] == v[0]+1 && v[1] == v[2]-1) return {0, 0};
        int minStep, maxStep;
        if((v[1] == v[0]+1 || v[1] == v[2]-1) || v[1] - v[0] == 2 || v[2] - v[1] == 2){
            minStep = 1;
        }
        else{
            minStep = 2;
        }
        maxStep = v[2]-v[1]-1+(v[1]+1-v[0]-1)/2 + (v[1]-v[0]-1)/2;
        return {minStep, maxStep};
    }
};
