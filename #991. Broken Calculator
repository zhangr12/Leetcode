class Solution {
public:
    int brokenCalc(int X, int Y) {
        int res = 0;
        while(Y > X){
            if(Y%2 == 0){
                Y /= 2;
                res++;
            }
            else{
                Y++;
                Y /= 2;
                res += 2;
            }
        }
        return res + X - Y;
    }
};
