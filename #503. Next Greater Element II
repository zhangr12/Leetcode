class Solution {
public:
    vector<int> nextGreaterElements(vector<int>& nums) {
        vector<int> nums2;
        for(int i = 0; i < 2; i++){
            for(int num:nums) nums2.push_back(num);
        }
        // nums2 equals to [nums, nums]
        int n = nums.size();
        vector<int> res(n, -1);
        stack<int> s, idx;
        for(int i = 0; i < nums2.size(); i++){
            while(!s.empty() && nums2[i] > s.top()){
                if(idx.top() < n){
                    res[idx.top()] = nums2[i];
                }
                idx.pop();
                s.pop();
            }
            idx.push(i);
            s.push(nums2[i]);
        }
        return res;
    }
};
