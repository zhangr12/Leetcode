class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        int carry = 1, temp;
        for (int i = digits.size() - 1; i >= 0; i--){
            temp = carry;
            carry = (digits[i] + carry)/10;
            digits[i] = (digits[i]+temp)%10;
            if(carry == 0 && i > 0) return digits;
        }
        if(carry == 1) digits.insert(digits.begin(), 1);
        return digits;
    }
};
